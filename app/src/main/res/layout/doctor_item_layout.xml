<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/doctor_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:src="@drawable/profillogo"
        android:layout_marginStart="0dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doctor_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />
        <!-- Moyenne des notes -->
        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:text="4.5"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Ã‰valuation visuelle (RatingBar) -->
            <ImageView
                android:id="@+id/doctor_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_24" />
        </LinearLayout>
        <TextView
            android:id="@+id/doctor_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="userId" />
    </LinearLayout>

    <Button
        android:id="@+id/book_appointment_button"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/iconsperson"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>
