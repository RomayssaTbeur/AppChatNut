<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Recupereinfo" >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcorner">
    <!-- Bouton de menu -->

    <RelativeLayout
        android:id="@+id/bar1"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_marginTop="2dp"
        android:background="#80A7D27B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_menu" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="3dp"
            android:paddingStart="12sp"

            android:paddingEnd="2dp"
            android:src="@drawable/icone" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Messages"
            android:textColor="@color/white"

            android:textSize="40dp" />


        <!-- Rectangle "Chat" -->


        <!-- Rectangle "Status" -->


        <!--Rectangle calls-->


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/bar1"
        app:layout_constraintBottom_toBottomOf="parent">

    <RelativeLayout
        android:id="@+id/bar2"
        android:layout_width="410dp"
        android:layout_height="1040dp"
        android:background="@drawable/rounded_coin"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/bar1"
        app:layout_constraintHorizontal_bias="0.425"

        app:layout_constraintVertical_bias="0.497" >
      <!--  android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"-->



        <!--1 ere layout-->
        <RelativeLayout
            android:id="@+id/inter1"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle"
            android:onClick="onRelativeLayoutClicked"
            android:padding="16dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/imageview"

                />

            <TextView
                android:id="@+id/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/profile"
                android:typeface="serif" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/firstname" />

        </RelativeLayout>
        <!--2 ere layout-->
