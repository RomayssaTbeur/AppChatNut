                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/firstname5" />

        </RelativeLayout>
        <!-- 5 eme layout-->

        <RelativeLayout
            android:id="@+id/inter6"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="470dp"
            android:background="@drawable/rectangle"
            android:onClick="onRelativeLayoutClicked"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/imageview"

                />

            <TextView
                android:id="@+id/firstname6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/profile6" />

            <TextView
                android:id="@+id/phone6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/firstname6" />

        </RelativeLayout>
        <!-- 5 eme layout-->


        <!-- 6 eme layout-->

        <RelativeLayout
            android:id="@+id/inter7"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="570dp"
            android:background="@drawable/rectangle"
            android:onClick="onRelativeLayoutClicked"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile7"
                android:layout_width="80dp"
